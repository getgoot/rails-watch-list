<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.google.co.uk/aclk?sa=l&ai=DChcSEwi-__u0iMmCAxWvU0ECHVZdBIwYABAHGgJ3cw&ase=2&gclid=Cj0KCQiAmNeqBhD4ARIsADsYfTdoG96qakEK2fx5KCu1C4gA4u0Br90LO0FZhAwyW1HgWpaQEaMLieYaAhy4EALw_wcB&sig=AOD64_2GRGbgzV0G-EXQrUyQ4g5FxlXRuA&ctype=5&nis=6&adurl&ved=2ahUKEwifrPC0iMmCAxWNUaQEHdbqDH4Qvhd6BQgBEIsB')">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
